<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_task_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/button_grey"
    android:elevation="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/main_margin"
            android:paddingTop="@dimen/main_margin"
            android:paddingBottom="@dimen/main_margin"
            android:textSize="17sp"
            android:paddingEnd="@dimen/main_margin"
            android:textColor="@color/black"
            tools:text="Task name" />

        <TextView
            android:id="@+id/task_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/main_margin"
            android:paddingBottom="@dimen/main_margin"
            android:paddingEnd="@dimen/main_margin"
            android:textColor="@color/black"
            tools:text="Test Task Description" />

    </LinearLayout>

</androidx.cardview.widget.CardView>